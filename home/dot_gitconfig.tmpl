[user]
    email = {{ .email | quote }}
    name = {{ .name | quote }}
	signingKey = 64C163F344E4E658
[alias]
    aa = add --all
    ap = add --patch
    br = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
    branches = for-each-ref --sort=-committerdate --format="%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)" refs/remotes
    ci = commit -v
    co = checkout
    pf = push --force-with-lease
    st = status -s
    lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    cb = "!git fetch -p && for branch in $(git for-each-ref --format '%(refname) %(upstream:track)' refs/heads | awk '$2 == "[gone]" {sub("refs/heads/", "", $1); print $1}'); do git branch -D $branch; done"
    rebase-onto = "!f() { base=$(git merge-base "$1" "$2"); git rebase --onto "$1" "$base" "$2"; }; f"
[init]
    defaultBranch = master
[credential]
    helper = store
[commit]
	gpgsign = true
[tag]
    gpgsign = true
[protocol "file"]
    allow = always
[core]
    editor = nano
    ignorecase = false
[pull]
    rebase = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true